        <label for="nome">Nome:</label>
        <input type="text" id="nome" name="nome" value="<%= funcionario.nome %>"><br>
        
        <label for="email">Email:</label>
        <input type="text" id="email" name="email" value="<%= funcionario.email %>"><br>
        
        <label for="pis">PIS:</label>
        <input type="text" id="pis" name="pis" value="<%= funcionario.pis %>"><br>
        
