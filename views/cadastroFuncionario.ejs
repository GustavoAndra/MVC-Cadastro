<!DOCTYPE html>
<html lang="pt-br">
    <%- include('layout/default/headLogado.ejs') %>
    <link rel="stylesheet" href="/css/funcionario.css">
<body>
    <%- include('layout/default/headerLogado.ejs') %>
    <section class="container">
        <header>Cadastre seu funcion√°rio aqui</header>
        <form action="/register/funcionario" method="post" id="formulario-cadastro" class="form" enctype="multipart/form-data">

            <div class="input-box">
                <label for="nome">Nome</label>
                <input type="text" id="nome" name="nome" placeholder="Insira seu nome" required><br>
            </div>
            <div class="input-box">
                <label for="pis">PIS:</label>
                <input type="text" id="pis" name="pis" placeholder="Insira seu PIS" required>
                <span id="pis-error" class="error-message"></span>
              </div>
              <div class="input-box">
                <label for="rg">RG:</label>
                <input type="text" id="rg" name="rg" placeholder="Insira seu RG" required>
                <span id="rg-error" class="error-message"></span>
              </div>
              <div class="input-box">
                <label for="cpf">CPF:</label>
                <input type="text" id="cpf" name="cpf" placeholder="Insira seu CPF" required>
                <span id="cpf-error" class="error-message"></span>
              </div>
            <div class="input-box">
                <label for="telefone">Telefone:</label>
                <input type="text" id="telefone" name="telefone" placeholder="Insira seu Telefone" required><br>
            </div>
            <div class="input-box">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" placeholder="Insira seu Email" required><br>
            </div>
            <div class="input-box">
                <label for="arquivo">Arquivo:</label>
                <input type="file" id="arquivo" name="arquivo" required><br>
            </div>
            <button type="submit">Cadastrar</button>
        </form>
    </section>
    <%- include('layout/default/footer.ejs') %>
</body>
<script src="<%= locals.jsPath %>/homePage.js"></script>
</html>